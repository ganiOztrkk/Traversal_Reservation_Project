@model IEnumerable<GetAllGuideQueryResult>
@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
    int count = 0;
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Image</th>
        <th>Guide Name</th>
        <th>Description</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
<tr>
    <td>@count</td>
    <td>
        <img src="@item.Image" height="50" width="50" alt=""/></td>
    <td>@item.Name</td>
    <td>@item.Description</td>
    <td><a href="#" class="btn btn-outline-danger">Delete</a></td>
    <td><a href="/Admin/GuideMediatR/GetGuides/@item.GuideID" class="btn btn-outline-success">Update</a></td>
</tr>
    }
</table>
<a href="/Admin/GuideMediatR/AddGuide/" class="btn btn-outline-primary">Add New Guide</a>