@model List<GetAllDestinationQueryResult>

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
    int count = 0;
}

<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>City</th>
        <th>Day Night</th>
        <th>Price</th>
        <th>Capacity</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.City</td>
            <td>@item.DayNight</td>
            <td>@item.Price â‚º</td>
            <td>@item.Capacity</td>
            <td><a href="/Admin/DestinationCQRS/DeleteDestination/@item.Id" class="btn btn-outline-danger">Delete</a></td>
            <td><a href="/Admin/DestinationCQRS/GetDestination/@item.Id" class="btn btn-outline-success">Update</a></td>
        </tr>
    }
</table>
