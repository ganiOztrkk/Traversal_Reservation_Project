@model IEnumerable<Announcement>

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Title</th>
        <th>Content</th>
        <th>Date</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AnnouncementId</td>
            <td>@item.Title</td>
            <td>@item.Content</td>
            <td>@item.Date.ToShortDateString()</td>
            <td><a asp-controller="Announcement" asp-action="DeleteAnnouncement" asp-route-id="@item.AnnouncementId" class="btn btn-danger">Delete</a></td>
            <td><a asp-controller="Announcement" asp-action="UpdateAnnouncement" asp-route-id="@item.AnnouncementId" class="btn btn-warning">Update</a></td>
        </tr>
    }
</table>
<a class="btn btn-primary" asp-controller="Announcement" asp-action="AddAnnouncement">Add Announcement</a>